<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_perfil"
    tools:context="com.aplicacion.oserj.profile.Perfil"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/degradado">


    <android.support.design.widget.AppBarLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="10dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>
    <TextView
        android:layout_width="0pt"
        android:layout_height="0pt"
        android:id="@+id/usuario"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="29pt"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:weightSum="1">


        <ImageView
            android:layout_width="123dp"
            android:layout_height="@dimen/logo_w_h"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="0.23" />

        <Button
            android:id="@+id/localizacion"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="30pt"
            android:text="LocalizaciÃ³n"
            android:textColor="@color/btn_login_bg" />

        <View
            android:layout_marginLeft="25px"
            android:background="@color/colorAccent"
            android:layout_marginRight="25px"
            android:layout_width="match_parent"
            android:layout_height="2pt"
             />

        <Button
            android:id="@+id/sistema"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/btn_login_bg"
            android:layout_marginTop="5pt"
            android:text="Sistema de carro"/>

        <View
            android:layout_marginLeft="25px"
            android:background="@color/colorAccent"
            android:layout_marginRight="25px"
            android:layout_width="match_parent"
            android:layout_height="2pt"
            />
        <Button
            android:id="@+id/cuenta"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:textColor="@color/btn_login_bg"
            android:text="Configuracion de cuenta de usuario" />
        <View
            android:layout_marginLeft="25px"
            android:background="@color/colorAccent"
            android:layout_marginRight="25px"
            android:layout_width="match_parent"
            android:layout_height="2pt"
            />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
